<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Imagen -->
        <ImageView
            android:id="@+id/imgInmueble"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:scaleType="centerInside"
            android:src="@drawable/imagen"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ID -->
        <TextView
            android:id="@+id/tvInfoCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="ID:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/imgInmueble"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvIdInmueble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="123"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoCodigo"
            app:layout_constraintStart_toEndOf="@id/tvInfoCodigo"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Dirección -->
        <TextView
            android:id="@+id/tvInfoDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Dirección:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvInfoCodigo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvDireccionI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Av. Siempre Viva 123"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoDireccion"
            app:layout_constraintStart_toEndOf="@id/tvInfoDireccion"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Tipo -->
        <TextView
            android:id="@+id/tvInfoTipo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Tipo:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvInfoDireccion"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvTipoI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Casa"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoTipo"
            app:layout_constraintStart_toEndOf="@id/tvInfoTipo"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Uso -->
        <TextView
            android:id="@+id/tvInfoUso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Uso:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvInfoTipo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvUsoI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Residencial"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoUso"
            app:layout_constraintStart_toEndOf="@id/tvInfoUso"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ambientes -->
        <TextView
            android:id="@+id/tvInfoAmbientesI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Ambientes:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvInfoUso"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAmbientesI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoAmbientesI"
            app:layout_constraintStart_toEndOf="@id/tvInfoAmbientesI"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Superficie -->
        <TextView
            android:id="@+id/tvInfoSuperficie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Superficie:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvInfoAmbientesI"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvSuperficieI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="120.0 m²"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoSuperficie"
            app:layout_constraintStart_toEndOf="@id/tvInfoSuperficie"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Valor -->
        <TextView
            android:id="@+id/tvInfoValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Precio:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvSuperficieI"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvValorI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="$ 0"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoValor"
            app:layout_constraintStart_toEndOf="@id/tvInfoValor"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Latitud -->
        <TextView
            android:id="@+id/tvInfoLatitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Latitud:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvValorI"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLatitudI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="-33.150720"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoLatitud"
            app:layout_constraintStart_toEndOf="@id/tvInfoLatitud"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Longitud -->
        <TextView
            android:id="@+id/tvInfoLongitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Longitud:"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tvLatitudI"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvLongitudI"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="-66.306864"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInfoLongitud"
            app:layout_constraintStart_toEndOf="@id/tvInfoLongitud"
            app:layout_constraintEnd_toEndOf="parent" />


        <!-- CheckBox disponible -->
        <CheckBox
            android:id="@+id/cbDisponible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Disponible"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvLatitudI" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerContrato"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="VER CONTRATO"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/cbDisponible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>